{
  "compilerOptions": {
    "lib": [ 
      "es5", 
      "es6", 
      "es7",
      "es2015", 
      "es2016",
      "es2017", 
      "es2018",
      "esnext" 
    ],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },

  "exclude": ["public"]
}
